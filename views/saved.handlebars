<nav class="navbar navbar-expand-lg navbar-light align-items-center">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home</a>
      <a class="nav-item nav-link active" href="#">Saved Articles</a>
    </div>
  </div>          
</nav>
<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>Your Saved Articles</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each data}}
    <div class='card'>
      <div class='card-header'>
        <div class="row align-items-center">
          <div class="col-sm-12">
            <h3>
              <a class='article-link title' target='_blank' href= {{this.link}} >
                {{this.title}} 
              </a>
            </h3> 
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3"></div>
          <div class="col-sm-2">
              <a data-id={{this._id}} class='btn btn-delete btn-md'>
                Delete From Saved
              </a>
          </div> 
          <div class="col-sm-2"></div>
          <div class="col-sm-2">
              {{!-- this button will open the modal populated with all of the article's notes --}}
              <a data-id={{this._id}} class='btn btn-notes btn-md'
              data-toggle="modal" data-target="#noteModal">
                Article Notes
              </a>
          </div> 
          <div class="col-sm-3"></div>
        </div>       
      </div>
      <div class='card-body'>
        {{this.summary}}
      </div>
    </div>
  {{/each}}
</div>
<div class="modal" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h5 id="noteTitle" class="title"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <div id="noteHolder"></div>
        <form>
          <div class="form-group">
            <label for="noteText" class="col-form-label">Add Note:</label>
            <textarea class="form-control" id="noteText"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer" id="btnHolder">        
      </div>
    </div>
  </div>
</div>
