<nav class="navbar navbar-expand-lg navbar-light align-items-center">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home</a>
      <a class="nav-item nav-link active" href="#">Saved Articles</a>
    </div>
  </div>          
</nav>
<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>Your Saved Articles</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each data}}
    <div class='card'>
      <div class='card-header'>
        <div class="row align-items-center">
          <div class="col-sm-12">
            <h3>
              <a class='article-link' target='_blank' href= {{this.link}} >
                {{this.title}} 
              </a>
            </h3> 
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4"></div>
          <div class="col-sm-2">
              <a id='delete_'+{{this._id}} class='btn btn-success btn-sm save'>
                Delete From Saved
              </a>
          </div> 
          <div class="col-sm-2">
              <a id='notes_'+{{this._id}} class='btn btn-success btn-sm save'>
                Article Notes
              </a>
          </div> 
          <div class="col-sm-4"></div>
        </div>       
      </div>
      <div class='card-body'>
        {{this.summary}}
      </div>
    </div>
  {{/each}}
</div>
